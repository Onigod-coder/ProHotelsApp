<Window x:Class="HotelsApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" 
        WindowStartupLocation="CenterOwner"
        Width="400" 
        SizeToContent="Height" 
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Window.Resources>
        <!-- Используем те же стили, что и в LoginWindow -->
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
        </Style>

        <Style x:Key="RegularText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0: Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- 1: Имя -->
                <RowDefinition Height="Auto"/>
                <!-- 2: Поле имени -->
                <RowDefinition Height="Auto"/>
                <!-- 3: Фамилия -->
                <RowDefinition Height="Auto"/>
                <!-- 4: Поле фамилии -->
                <RowDefinition Height="Auto"/>
                <!-- 5: Email -->
                <RowDefinition Height="Auto"/>
                <!-- 6: Поле email -->
                <RowDefinition Height="Auto"/>
                <!-- 7: Пароль -->
                <RowDefinition Height="Auto"/>
                <!-- 8: Поле пароля -->
                <RowDefinition Height="Auto"/>
                <!-- 9: Подтверждение пароля -->
                <RowDefinition Height="Auto"/>
                <!-- 10: Поле подтверждения -->
                <RowDefinition Height="Auto"/>
                <!-- 11: Требования к паролю -->
                <RowDefinition Height="Auto"/>
                <!-- 12: Индикатор сложности -->
                <RowDefinition Height="Auto"/>
                <!-- 13: Кнопки -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Регистрация нового пользователя" 
                   Style="{StaticResource HeaderText}"
                   Grid.Row="0"/>

            <!-- Поля формы -->
            <TextBlock Text="Имя:" Grid.Row="1" Style="{StaticResource RegularText}"/>
            <TextBox x:Name="FirstNameTextBox" Grid.Row="2"/>

            <TextBlock Text="Фамилия:" Grid.Row="3" Style="{StaticResource RegularText}"/>
            <TextBox x:Name="LastNameTextBox" Grid.Row="4"/>

            <TextBlock Text="Email:" Grid.Row="5" Style="{StaticResource RegularText}"/>
            <TextBox x:Name="EmailTextBox" Grid.Row="6"/>

            <TextBlock Text="Пароль:" Grid.Row="7" Style="{StaticResource RegularText}"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="8" Margin="0 0 0 5"/>

            <TextBlock Text="Подтверждение пароля:" Grid.Row="9" Style="{StaticResource RegularText}"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="10" Margin="0 0 0 10"/>

            <!-- Требования к паролю -->
            <TextBlock x:Name="PasswordRequirementsText" Grid.Row="11"
                   TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0 0 0 5"/>

            <!-- Индикатор сложности пароля -->
            <StackPanel Grid.Row="12" Orientation="Vertical" Margin="0 0 0 15">
                <ProgressBar x:Name="PasswordStrengthBar" Minimum="0" Maximum="100" 
                         Height="5" Margin="0 0 0 2"/>
                <TextBlock x:Name="PasswordStrengthText" FontSize="11" Margin="0 2 0 2"/>
                <TextBlock x:Name="PasswordMatchText" FontSize="11"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Отмена" 
                    Style="{StaticResource SecondaryButton}" 
                    Width="100"
                    Click="CancelButton_Click"/>
                <Button Content="Зарегистрироваться" 
                    Style="{StaticResource MainButton}" 
                    Width="150"
                    Margin="10 0 0 0"
                    Click="RegisterButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>