<Window x:Class="HotelsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelsApp"
        mc:Ignorable="d"
        Title="HotelsApp - Бронирование отелей" 
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600"
        >

    <Window.Resources>
        <!-- Стили для приложения -->
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <local:PaidStatusToVisibilityConverter x:Key="PaidStatusToVisibilityConverter"/>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainWindowStyle" TargetType="Window">
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <!-- Стиль для уведомления -->
        <Style x:Key="NotificationStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Opacity" Value="0"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1" Duration="0:0:0.5"/>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="Opacity"
                                From="1" To="0" Duration="0:0:0.5"
                                BeginTime="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка приложения -->
        <Border Grid.Row="0" Background="#FF1E88E5" Padding="20 10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Width="32" Height="32" Margin="0 0 10 0"/>
                <TextBlock Text="HotelsApp" Foreground="White" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Margin="20">
            <TabItem Header="Поиск отелей">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска -->
                        <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="15" 
                                BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0 0 10 0">
                                    <TextBlock Text="Город" FontSize="12" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="CityComboBox" DisplayMemberPath="CityName" 
                                              SelectedValuePath="CityID" Height="30" Margin="0 5 0 0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0 0 10 0">
                                    <TextBlock Text="Дата заезда" FontSize="12" FontWeight="SemiBold"/>
                                    <DatePicker x:Name="CheckInDatePicker" Height="30" Margin="0 5 0 0" 
                                               SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="0 0 10 0">
                                    <TextBlock Text="Дата выезда" FontSize="12" FontWeight="SemiBold"/>
                                    <DatePicker x:Name="CheckOutDatePicker" Height="30" Margin="0 5 0 0" 
                                               SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Margin="0 0 10 0">
                                    <TextBlock Text="Количество гостей" FontSize="12" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="GuestsComboBox" Height="30" Margin="0 5 0 0"
                                              SelectionChanged="GuestsComboBox_SelectionChanged">
                                        <ComboBoxItem Content="1 гость" IsSelected="True"/>
                                        <ComboBoxItem Content="2 гостя"/>
                                        <ComboBoxItem Content="3 гостя"/>
                                        <ComboBoxItem Content="4 гостя"/>
                                        <ComboBoxItem Content="5+ гостей"/>
                                    </ComboBox>
                                </StackPanel>

                                <Button Grid.Column="4" Content="Найти" 
                                        Style="{StaticResource MainButtonStyle}" 
                                        VerticalAlignment="Bottom" Height="30" Width="100"
                                        Margin="0 0 0 5"
                                        Click="SearchButton_Click"/>
                            </Grid>
                        </Border>

                        <!-- Результаты поиска -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Список отелей -->
                            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="600">
                                <Border Background="White" CornerRadius="4" Padding="10" 
                                        BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                        Margin="0 0 15 0">
                                    <ListView x:Name="HotelsListView" Grid.Row="1" Margin="10" SelectionChanged="HotelsListView_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Width="120" Height="80" Stretch="UniformToFill">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HotelImage}" Value="{x:Null}">
                                                                        <Setter Property="Source" Value="/Resources/Hotels/default.jpg"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                                <Setter Property="Source" Value="{Binding HotelImage}"/>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding HotelName}" FontWeight="Bold" FontSize="16"/>
                                                        <TextBlock Text="{Binding StarRating, StringFormat='{}{0} ★'}" Foreground="Gold"/>
                                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>
                            </ScrollViewer>

                            <!-- Детали отеля -->
                            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="600">
                                <Border Background="White" CornerRadius="4" 
                                        BorderBrush="#FFE0E0E0" BorderThickness="1" Padding="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock x:Name="SelectedHotelName" FontSize="20" FontWeight="Bold"/>
                                            <TextBlock x:Name="SelectedHotelStars" Margin="10 0 0 0" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock x:Name="SelectedHotelAddress" Grid.Row="1" Margin="0 10 0 0"/>
                                        <TextBlock x:Name="SelectedHotelDescription" Grid.Row="2" Margin="0 10 0 0" 
                                                   TextWrapping="Wrap"/>

                                        <Grid Grid.Row="3" Margin="0 20 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="300"/>
                                            </Grid.ColumnDefinitions>

                                            <TabControl Grid.Column="0" Height="300">
                                                <TabItem Header="Номера">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                                                            <TextBlock Text="Сортировка номеров:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <ComboBox x:Name="SortComboBox" Width="200" HorizontalAlignment="Left"/>
                                                        </StackPanel>

                                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10,0">
                                                            <ItemsControl x:Name="AmenitiesListBox">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <CheckBox Content="{Binding AmenityName}" 
                                                                                  IsChecked="{Binding IsSelected}" 
                                                                                  Margin="0,0,15,0"
                                                                                  VerticalAlignment="Center"/>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </ScrollViewer>

                                                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                                            <ListView x:Name="RoomsListView" Margin="10">
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Margin="5">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="150"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <Image Width="150" Height="100" Stretch="UniformToFill">
                                                                                <Image.Style>
                                                                                    <Style TargetType="Image">
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding RoomImage}" Value="{x:Null}">
                                                                                                <Setter Property="Source" Value="/Resources/Rooms/default.jpg"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                        <Setter Property="Source" Value="{Binding RoomImage}"/>
                                                                                    </Style>
                                                                                </Image.Style>
                                                                            </Image>
                                                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                                                <TextBlock Text="{Binding RoomType}" FontWeight="Bold" FontSize="16"/>
                                                                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                                                                <TextBlock Text="{Binding Capacity, StringFormat='Вместимость: {0} гостей'}" Margin="0,5,0,0"/>
                                                                                <TextBlock Text="{Binding RoomNumber, StringFormat='Номер комнаты: {0}'}" Margin="0,5,0,0"/>
                                                                                <TextBlock Text="{Binding BasePrice, StringFormat='Цена за ночь: {0:C}'}" Margin="0,5,0,0"/>
                                                                                <TextBlock Text="{Binding TotalPrice, StringFormat='Итого за период: {0:C}'}" FontWeight="Bold" Margin="0,5,0,0"/>
                                                                                <Button Content="Забронировать" Click="BookRoomButton_Click" Margin="0,10,0,0"/>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                        </ScrollViewer>
                                                    </Grid>
                                                </TabItem>

                                                <TabItem Header="Удобства">
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                                        <ListView x:Name="AmenitiesListView" Margin="0 10 0 0">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                                                        <CheckBox IsChecked="True" IsEnabled="False" Margin="0 0 5 0"/>
                                                                        <TextBlock Text="{Binding AmenityName}" VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </ListView>
                                                    </ScrollViewer>
                                                </TabItem>

                                                <TabItem Header="Отзывы">
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                                        <ListView x:Name="ReviewsListView" Margin="0 10 0 0">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Background="#FFF5F5F5" CornerRadius="4" Padding="15" 
                                                                            BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                                                            Margin="0 0 0 10">
                                                                        <StackPanel>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <TextBlock Text="{Binding Rating, StringFormat='{}Оценка: {0}'}" 
                                                                                           FontWeight="Bold" Margin="0 0 10 0"/>
                                                                                <TextBlock Text="{Binding ReviewDate, StringFormat='{}Дата: {0:d}'}"/>
                                                                            </StackPanel>
                                                                            <TextBlock Text="{Binding Comment}" Margin="0 5 0 0" TextWrapping="Wrap"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </ListView>
                                                    </ScrollViewer>
                                                </TabItem>
                                            </TabControl>

                                            <!-- Дополнительные фильтры -->
                                            <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="15" 
                                                    BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="10 0 0 0">
                                                <StackPanel>
                                                    <TextBlock Text="Дополнительные фильтры" FontSize="14" FontWeight="SemiBold" Margin="0 0 0 10"/>
                                                    
                                                    <StackPanel Margin="0 0 0 10">
                                                        <TextBlock Text="Категория отеля" FontSize="12" FontWeight="SemiBold"/>
                                                        <ComboBox x:Name="StarRatingComboBox" Height="30" Margin="0 5 0 0">
                                                            <ComboBoxItem Content="Любая категория" IsSelected="True"/>
                                                            <ComboBoxItem Content="1 звезда"/>
                                                            <ComboBoxItem Content="2 звезды"/>
                                                            <ComboBoxItem Content="3 звезды"/>
                                                            <ComboBoxItem Content="4 звезды"/>
                                                            <ComboBoxItem Content="5 звезд"/>
                                                        </ComboBox>
                                                    </StackPanel>

                                                    <StackPanel Margin="0 0 0 10">
                                                        <TextBlock Text="Тип номера" FontSize="12" FontWeight="SemiBold"/>
                                                        <ComboBox x:Name="RoomTypeComboBox" DisplayMemberPath="TypeName" 
                                                                  SelectedValuePath="RoomTypeID" Height="30" Margin="0 5 0 0"
                                                                  SelectionChanged="RoomTypeComboBox_SelectionChanged"/>
                                                    </StackPanel>

                                                    <StackPanel Margin="0 0 0 10">
                                                        <TextBlock Text="Цена за ночь" FontSize="12" FontWeight="SemiBold"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                                            <TextBox x:Name="MinPriceTextBox" Width="70" Height="30" 
                                                                     Text="0" Margin="0 0 5 0"/>
                                                            <TextBlock Text="-" VerticalAlignment="Center" Margin="5 0 5 0"/>
                                                            <TextBox x:Name="MaxPriceTextBox" Width="70" Height="30" 
                                                                     Text="10000" Margin="5 0 0 0"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Margin="0 0 0 15">
                                                        <TextBlock Text="Удобства" FontSize="12" FontWeight="SemiBold"/>
                                                        <Border Background="White" CornerRadius="4" Padding="5" 
                                                                BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                                                Height="100" Margin="0 5 0 0">
                                                            <ListBox x:Name="FilterAmenitiesListBox" SelectionMode="Multiple" 
                                                                    BorderThickness="0" Background="Transparent">
                                                                <ListBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <CheckBox Content="{Binding AmenityName}" 
                                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                                  Margin="2"/>
                                                                    </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                            </ListBox>
                                                        </Border>
                                                    </StackPanel>

                                                    <Button Content="Применить фильтры" 
                                                            Style="{StaticResource MainButtonStyle}" 
                                                            Height="30" Width="200"
                                                            HorizontalAlignment="Center"
                                                            Click="SearchButton_Click"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                                            <Button x:Name="ViewAllHotelsButton" Content="Показать все отели" 
                                                    Style="{StaticResource SecondaryButtonStyle}" 
                                                    Margin="0 0 10 0" Padding="15 5"
                                                    Click="ViewAllHotelsButton_Click"/>
                                            <Button Content="Оставить отзыв" 
                                                    Style="{StaticResource MainButtonStyle}"
                                                    Padding="15 5"
                                                    Click="AddReviewButton_Click"
                                                    x:Name="AddReviewButton"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Мои бронирования" x:Name="MyBookingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Блок информации о пользователе -->
                        <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="15" 
                                BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="0 0 0 15">
                            <StackPanel>
                                <TextBlock Text="Информация о профиле" 
                                           Style="{StaticResource SectionHeaderStyle}"/>

                                <Grid Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" 
                                               Margin="0 0 10 5"/>
                                    <TextBlock x:Name="ProfileFirstName" Grid.Row="0" Grid.Column="1" 
                                               FontWeight="Bold"/>

                                    <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" 
                                               Margin="0 0 10 5"/>
                                    <TextBlock x:Name="ProfileLastName" Grid.Row="1" Grid.Column="1" 
                                               FontWeight="Bold"/>

                                    <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" 
                                               Margin="0 0 10 5"/>
                                    <TextBlock x:Name="ProfileEmail" Grid.Row="2" Grid.Column="1" 
                                               FontWeight="Bold"/>

                                    <TextBlock Text="Дата регистрации:" Grid.Row="3" Grid.Column="0" 
                                               Margin="0 0 10 5"/>
                                    <TextBlock x:Name="ProfileRegDate" Grid.Row="3" Grid.Column="1" 
                                               FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <TextBlock Grid.Row="1" Text="Мои бронирования" 
                                   Style="{StaticResource HeaderTextStyle}"/>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ListView x:Name="BookingsListView" d:ItemsSource="{d:SampleData ItemCount=5}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" CornerRadius="4" Padding="10" 
                                                BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                                Margin="0 0 0 10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding HotelName}" FontWeight="Bold" FontSize="16"/>
                                                    <TextBlock Text="{Binding RoomType}" Margin="0 5 0 0"/>
                                                    <TextBlock Text="{Binding RoomNumber, StringFormat='Номер: {0}'}" Margin="0 5 0 0"/>
                                                    <TextBlock Text="{Binding GuestCount, StringFormat='Количество гостей: {0}'}" Margin="0 5 0 0"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                                        <TextBlock Text="{Binding CheckInDate, StringFormat='{}Заезд: {0:d}'}"/>
                                                        <TextBlock Text=" - " Margin="5 0 5 0"/>
                                                        <TextBlock Text="{Binding CheckOutDate, StringFormat='{}Выезд: {0:d}'}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Status, StringFormat='{}Статус: {0}'}" Margin="0 5 0 0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}Сумма: {0:C}'}" 
                                                               FontSize="18" FontWeight="Bold"/>
                                                    <Button Content="Оплатить" 
                                                            Style="{StaticResource MainButtonStyle}" 
                                                            Margin="0 10 0 0" Padding="15 5"
                                                            Click="PayBookingButton_Click" 
                                                            Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}"/>
                                                    <Button Content="Скачать чек" 
                                                            Style="{StaticResource MainButtonStyle}" 
                                                            Margin="0 10 0 0" Padding="15 5"
                                                            Click="DownloadReceiptButton_Click" 
                                                            Visibility="{Binding Status, Converter={StaticResource PaidStatusToVisibilityConverter}}"/>
                                                    <Button Content="Отменить" 
                                                            Style="{StaticResource SecondaryButtonStyle}" 
                                                            Margin="0 10 0 0" Padding="15 5"
                                                            Click="CancelBookingButton_Click"
                                                            Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        

        <!-- Подвал приложения -->
        <Border Grid.Row="2" Background="#FFE0E0E0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="UserGreetingText" 
                           Text="Добро пожаловать в HotelsApp!" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="LoginButton" Content="Войти" Style="{StaticResource SecondaryButtonStyle}" 
                            Click="LoginButton_Click"/>
                    <Button x:Name="RegisterButton" Content="Регистрация" Style="{StaticResource SecondaryButtonStyle}" 
                            Margin="10 0 0 0" Click="RegisterButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Уведомление об успешной авторизации -->
        <TextBlock x:Name="AuthNotification" 
                   Text="Успешная авторизация!" 
                   Style="{StaticResource NotificationStyle}"
                   Visibility="Collapsed"/>
    </Grid>
</Window>