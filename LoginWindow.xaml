<Window x:Class="HotelsApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" 
        WindowStartupLocation="CenterOwner"
        Width="400" 
        SizeToContent="Height" 
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF212121"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>

        <!-- Стиль для обычного текста -->
        <Style x:Key="RegularText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
        </Style>

        <!-- Стиль для полей ввода -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="4" Padding="30" 
            BorderBrush="#FFE0E0E0" BorderThickness="1" 
            Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0: Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- 1: Текст "Email" -->
                <RowDefinition Height="Auto"/>
                <!-- 2: Поле Email -->
                <RowDefinition Height="Auto"/>
                <!-- 3: Текст "Пароль" -->
                <RowDefinition Height="Auto"/>
                <!-- 4: Поле Password -->
                <RowDefinition Height="Auto"/>
                <!-- 5: Кнопки (новая строка) -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Вход в систему" 
               Style="{StaticResource HeaderText}"
               Grid.Row="0"/>

            <!-- Поля формы -->
            <TextBlock Text="Email:" Grid.Row="1" Style="{StaticResource RegularText}"/>
            <TextBox x:Name="EmailTextBox" Grid.Row="2"/>

            <TextBlock Text="Пароль:" Grid.Row="3" Style="{StaticResource RegularText}"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="4" Margin="0 0 0 10"/>
            <!-- Добавлен отступ снизу -->

            <!-- Кнопки (теперь в Grid.Row="5") -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Отмена" 
                Style="{StaticResource SecondaryButton}" 
                Width="100"
                Click="CancelButton_Click"/>
                <Button Content="Войти" 
                Style="{StaticResource MainButton}" 
                Width="100"
                Margin="10 0 0 0"
                IsDefault="True"
                Click="LoginButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>